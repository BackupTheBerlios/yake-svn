	</BuildSharedLibrary>

	<BuildSharedLibrary
		name="yakePhysics"
		src="src/yake/physics"
	>
		<libadd>yakeBase</libadd>
	</BuildSharedLibrary>

        <BuildSharedLibrary
                name="yakeScripting"
                src="src/yake/scripting"
        >
                <libadd>yakeBase</libadd>
        </BuildSharedLibrary>

        <BuildSharedLibrary
                name="yakeThread"
                src="src/yake/thread"
        >
                <libadd>yakeBase</libadd>
		<libadd>ZThread</libadd>
        </BuildSharedLibrary>


